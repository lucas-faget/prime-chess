{
    "name": "prime-chess",
    "version": "1.0.0",
    "description": "",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev:frontend": "pnpm --filter @primechess/frontend dev",
        "dev:backend": "pnpm --filter @primechess/backend dev",
        "dev": "pnpm -r dev",
        "update": "pnpm -r update",
        "update:frontend": "pnpm update --filter @primechess/frontend",
        "update:backend": "pnpm update --filter @primechess/backend",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "keywords": [],
    "author": "lucas-faget",
    "packageManager": "pnpm@10.19.0",
    "devDependencies": {
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.7.1"
    }
}
